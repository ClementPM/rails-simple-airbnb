<h1>All Flats #<%= @flats.length %></h1>

<div class="card-grid" >
  <% @flats.each do |flat| %>
    <div class='card'>
      <div class="card-content">
        <h2> <%= flat.name %></h2>
        <p> <%= flat.address %> </p> 
          <div class="flexy">
            <p><i class="fas fa-dollar-sign"></i><%= flat.price_per_night %></p>
            <p><i class="fas fa-user-friends"></i> <%= flat.number_of_guests %> </p> 
          </div>
      </div>

      <p><%= link_to 'More info', flat_path(flat) %></p>
    </div>
  <% end %>
</div>